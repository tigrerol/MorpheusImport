{
    "scene_detection": {
        "threshold": 27,
        "min_scene_len": 3,
        "show_progress": true,
        "detector": "content"
    },
    "ocr": {
        "threshold_method": "adaptive",
        "block_size": 11,
        "c": -2,
        "resize_width": 800,
        "tesseract_config": "--psm 6 --oem 3",
        "preprocessing": {
            "gaussian_blur": true,
            "gaussian_kernel": 3,
            "median_blur": true,
            "median_kernel": 3
        }
    },
    "output": {
        "format": "markdown",
        "include_timestamps": true,
        "timestamp_format": "HH:MM:SS",
        "chapter_prefix": "##",
        "save_frames": false,
        "frames_dir": "frames",
        "json_dir": "output",
        "pretty_print": true
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(levelname)s - %(message)s",
        "file": "processor.log"
    },
    "gemini": {
        "model": "gemini-pro",
        "temperature": 0.7,
        "max_output_tokens": 2048,
        "top_p": 0.8,
        "top_k": 40
    },
    "input": {
        "markdown_dir": "input",
        "file_pattern": "*.md"
    }
} 